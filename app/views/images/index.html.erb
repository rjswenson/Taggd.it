<div class="banner">
  <div class="images-title pull-left">
  <h1>Newest Uploads</h1>
  <h3> From around the World </h3>
</div>
<div class="upload-button">
  <h3> Or upload your own </h3>
  <%= link_to 'Upload', new_image_path, class: "btn-large btn-custom" %>
</div>
</div>

<div class="custom-container">
<div class="all-images">
  <% @images.each do |image| %>
    <ul class="thumbnail">
      <li><%= image_tag("#{image.name}", :size => "250x250") %>
      <%= image.location %>

      <% if current_user && current_user.admin? %>
        <%= link_to 'Edit', edit_image_path(image), class: "btn-custom" %>
        <%= link_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn-custom" %></li>
      <% end %>
    </ul>
  <% end %>
</div>
</div>
