<ul class="thumb-frame">
  <li class="inside-pic" id="<%= dom_id(image) %>"><%= link_to image_tag(image.name_url(:indexed).to_s), image_path(image) %></li>
  <li><%= pluralize image.reputation_for(:votes).to_i, "vote" %></li>
  <li>
    <%= link_to "up", vote_image_path(image, type: "up"), method: :post %> ||
    <%= link_to "down", vote_image_path(image, type: "down"), method: :post %>
  </li>


  <li><%= image.location %></li>
  <li><%= distance_of_time_in_words(image.created_at, Time.current) %> Ago</li>

  <% if current_user && current_user.admin? %>
    <li><%= link_to 'Edit', edit_image_path(image), class: "btn-custom btn-small" %></li>
    <li><%= link_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn-custom btn-small" %></li>
  <% end %>
</ul>
