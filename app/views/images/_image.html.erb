  <ul class="thumb-frame">
  <li class="inside-pic" id="<%= dom_id(image) %>">
  <li class="thumb-votes"><%= pluralize image.reputation_for(:votes).to_i, "vote" %></li>
  <li class="thumb-cast-vote">
    <i><%= link_to "", vote_image_path(image, type: "up"), class: "icon-large icon-thumbs-up", method: :post %></i> ||
    <%= link_to "", vote_image_path(image, type: "down"), class: "icon-large icon-thumbs-down", method: :post %>
  </li>

  <li class="thumb-location"><%= image.location %></li>
  <li class="thumb-uploaded"><%= distance_of_time_in_words(image.created_at, Time.current) %> Ago</li>

  <% if current_user && current_user.admin? %>
    <li class="thumb-details"><%= link_to 'Edit', edit_image_path(image), class: "btn-custom btn-small" %></li>
    <li class="thumb-details"><%= link_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn-custom btn-small" %></li>
  <% end %>
 </li>
</ul>
